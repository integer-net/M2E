<script type="text/javascript">

    var init = function() {

        var initAccountSettings = function() {
            new Ajax.Request('<?php echo $this->getUrl('*/*/getAccountSettings',array('account_id' => $this->getData('account_id'))); ?>', {
                method: 'get',
                onSuccess: function(transport) {
                    var response = transport.responseText.evalJSON();

                    if (response.result == 'error') {
                        return MagentoMessageObj.addError(response.message);
                    }

                    $H(response.text).each(function(item) {
                        $(item.key).update(item.value);
                    });

                }
            });
        };

        initAccountSettings();

        $('edit_account').observe('click',function() {
            var win = window.open('<?php echo $this->getUrl('*/adminhtml_ebay_account/edit',array(
                'id' => $this->getData('account_id'),
                'wizard' => true,
                'close_on_save' => true
            )); ?>');

            var intervalId = setInterval(function() {

                if (!win.closed) {
                    return;
                }

                clearInterval(intervalId);

                initAccountSettings();

            }, 1000);
        });
    };

    Event.observe(window, 'load', init);
</script>